<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Controllers.UserProfile"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewOnProfile"
        android:layout_width="326dp"
        android:layout_height="266dp"
        android:layout_marginLeft="30sp"
        android:contentDescription="@string/imageDesc"
        app:srcCompat="@drawable/ic_profile_male" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15sp"
        android:paddingRight="30sp"
        android:paddingLeft="30sp"
        android:textAlignment="gravity"
        android:contentDescription="@string/userDetails">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/NameOnProfile"
                android:textAlignment="center"
                android:paddingLeft="25sp"
                android:paddingRight="25sp"
                android:textSize="25sp"
                android:text="Full Name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/AddressOnProfile"
            android:text="Address"
            android:textAlignment="center"
            android:textSize="18sp"
            android:paddingTop="10sp"
            android:paddingLeft="25sp"
            android:paddingRight="25sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/StatusOnProfile"
            android:text="Status"
            android:paddingTop="30sp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:paddingLeft="25sp"
            android:paddingRight="25sp"
            />

        <Button
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:layout_marginRight="50sp"
            android:layout_marginLeft="50sp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:id="@+id/btnOnProfile"
            />


    </LinearLayout>
</LinearLayout>